{
  "name": "unwanted-tools",
  "version": "1.0.0-beta.1",
  "description": "Unwanted Tools - find archived media across Wayback, MP3 Search and LostMySpace",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-build": "npm run build && electron .",
    "start": "electron .",
    "start:prod": "electron .",
    "dist": "npm run build && npm run generate-icon && electron-builder --win --x64",
    "write-icon": "node scripts/write-icon.js",
    "generate-icon": "npm run write-icon && png-to-ico build/icon.png > build/icon.ico",
    "prepare-build": "npm run generate-icon"
  },
  "author": "KimmyOGato",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "electron-updater": "^6.6.2",
    "node-fetch": "^2.6.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "slsk-client": "^1.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "png-to-ico": "^1.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.kimmyogato.unwantedtools",
    "productName": "Unwanted Tools",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
